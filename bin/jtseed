#!/bin/bash

echo "Create a jtseed.last file at this folder to stop at the next compilation"

rm -f jtseed.last

while true; do
    if jtcore $* -seed $RANDOM; then
        break
    fi
    # parallel jtcore $* -seed {} ::: $RANDOM $RANDOM | tee -a $1_seed.log
    if [ -e jtseed.last ]; then
        rm jtseed.last
        exit 0
    fi
done